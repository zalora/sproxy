category:            Web
build-type:          Simple
cabal-version:       >=1.10
data-files:          sproxy.sql

executable sproxy
  main-is:             Main.hs
  hs-source-dirs:      src
  other-modules:       Cookies,
                       HTTP
  build-depends:       aeson >= 0.7.0.4,
                       attoparsec,
                       base >=4.6 && <4.7,
                       bytestring,
                       case-insensitive,
                       certificate,
                       concurrent-extra,
                       containers >= 0.5,
                       crypto-random,
                       curl,
                       data-default,
                       hslogger,
                       http-types >= 0.8.5,
                       interpolatedstring-perl6,
                       mtl,
                       network,
                       optparse-applicative,
                       postgresql-simple,
                       safe,
                       SHA,
                       split,
                       string-conversions,
                       time,
                       -- The openssl library is not thread safe, at
                       -- least not the way that HsOpenSSL uses it in
                       -- my testing (segfaults), so I'm using the
                       -- Haskell-native tls library instead.
                       tls >= 1.2,
                       unordered-containers,
                       unix,
                       utf8-string,
                       x509,
                       http-kit >= 0.4,
                       yaml >= 0.8
  default-language:    Haskell2010
  ghc-options:         -Wall -threaded -O2

test-suite spec
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall -Werror
  hs-source-dirs:      src, test
  main-is:             Spec.hs
  build-depends:       aeson,
                       attoparsec,
                       base >=4.6 && <4.7,
                       bytestring,
                       case-insensitive,
                       certificate,
                       concurrent-extra,
                       containers >= 0.5,
                       crypto-random,
                       curl,
                       data-default,
                       hslogger,
                       http-types,
                       interpolatedstring-perl6,
                       mtl,
                       network,
                       optparse-applicative,
                       postgresql-simple,
                       safe,
                       SHA,
                       split,
                       string-conversions,
                       time,
                       tls >= 1.2,
                       unordered-containers,
                       unix,
                       utf8-string,
                       x509,
                       http-kit,
                       yaml >= 0.8,

                       hspec >= 1.5,
                       http-conduit,
                       wai,
                       conduit,
                       warp,
                       connection
  default-language:    Haskell2010
